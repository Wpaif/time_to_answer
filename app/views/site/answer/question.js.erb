var submit_button = document.querySelector('#submit_<%= @answer.question_id %>');

submit_button.classList.remove('btn-default');
submit_button.classList.remove('btn-success');
submit_button.classList.remove('btn-danger');

if (<%= @answer.correct %>) {
  submit_button.classList.add('btn-success');
  $.bootstrapGrowl('<%= 'You\'re riht' %>', {
    type: 'success', // (null, 'info', 'danger', 'success')
    align: 'right', // ('left', 'right', or 'center')
    allow_dismiss: true, // If true then will display a cross to close the popup.
    stackup_spacing: 10 // spacing between consecutively stacked growls.
  });
} else {
  submit_button.classList.add( 'btn-danger');
  $.bootstrapGrowl('<%= 'You\'re wrong' %>', {
    type: 'danger', // (null, 'info', 'danger', 'success')
    align: 'right', // ('left', 'right', or 'center')
    allow_dismiss: true, // If true then will display a cross to close the popup.
    stackup_spacing: 10 // spacing between consecutively stacked growls.
  });
} 
