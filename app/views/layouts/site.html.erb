<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>TimeToAnswer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'site' %>
  </head>

  <body>

    <div class="container">

      <!-- Static navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Time To Answer</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav"></ul>

            <%= form_with(url: site_search_path, local: true, method: :get, 
                          class: 'navbar-form navbar-left') do |form| %>
              <div class="form-group">
                <%= form.text_field :term, class: 'form-control', placeholder: 'Search' %>
              </div>
              <button type="submit" class="btn btn-default">Search</button>
            <% end %>
            
            <ul class="nav navbar-nav navbar-right">
              
              <% unless user_signed_in? %>
                <li> <%= link_to 'Sing in', new_user_session_path %> </li>
                <li> <%= link_to 'Sign up', new_user_registration_path %> </li>
              <% else %>
                <li><a href="../navbar-fixed-top/"></a></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <%= current_user.email %> <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to users_backoffice_welcome_index_path do %>
                        <i class="fa fa-user fa-fw"></i> Profile
                      <% end %>
                    </li>
                    <li role="separator" class="divider"></li>
                    <li>
                      <%= link_to destroy_user_session_path, method: :delete do %>
                      <i class="fa fa-sign-out fa-fw"></i> Logout
                      <% end %>
                    </li>
                  </ul>
                </li>
              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>

      <!-- Main component for a primary marketing message or call to action -->
      <div class="jumbotron">
        <h1>Site::Welcome#index</h1>
        <% if user_signed_in? %>
          <div>
            <p>Session:  <%= link_to current_user.email, users_backoffice_welcome_index_path %> </p>
          </div>
        <% else %>
          <div>
            <%= link_to 'Login User', new_user_session_path %>
          </div>
        <% end %>

        <% if admin_signed_in? %>
          <div>
            <p>Session:  <%= link_to current_admin.email, admins_backoffice_welcome_index_path %> </p>
          </div>
        <% else %>
          <div>
            <%= link_to 'Login Admin', new_admin_session_path %>
          </div>
        <% end %>
      </div> <!-- /jumbotron -->
      
      <%= yield %>
    
    </div> <!-- /container -->

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>


    <% if notice %>
      <%= javascript_tag do%>
        $.bootstrapGrowl('<%= notice %>', {
        type: 'success', // (null, 'info', 'danger', 'success')
        align: 'right', // ('left', 'right', or 'center')
        allow_dismiss: true, // If true then will display a cross to close the popup.
        stackup_spacing: 10 // spacing between consecutively stacked growls.
        });
      <% end %>
    <% end %>
  </body>
</html>
