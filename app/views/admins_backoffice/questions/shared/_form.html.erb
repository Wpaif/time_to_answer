<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"> <%= action_message %></h1>
  </div>
</div>
<div class="row">
  <% if @question.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">

      <% if action_name.eql?('new') %>
        <%= t('messages.new_item', model: @question.model_name.human.downcase) %>
      <% elsif action_name.eql?('edit') %>
          <%= t('messages.edit_item', gender:'a', model: @question.model_name.human.downcase) %>
      <% end %>

      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
           
            <%= form_with(model: [ :admins_backoffice, @question ], local: true) do |form| %>
              <div class="form-group">
                <%= form.label :description %>
                <%= form.text_area :description, class: 'form-control', placeholder: 'Enter with the question', rows: 5 %>
              </div>
              <div class="form-group">
                <%= form.label :subject_id %>
                <%= form.collection_select(:subject_id, @subjects, :id, :description, {}, {class: 'form-control'}) %>
              </div>

              <div id="answers">
                <%= form.fields_for :answers do |answer| %>
                  <%= render partial: 'answer_fields', locals: { f: answer }%>
                <% end %>

                <div class="form-group">
                  <%= link_to_add_association 'Add Subject', form, :answers, class: 'btn btn-default' %>
                </div>
                
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
