<div class="nested-fields">
  <div class="form-group">
    <%= f.label :description %>
  </div>
  <div class="form-group">
    <%= f.text_field :description, class: 'form-control', placeholder: t('placeholder.answer.type_a_new_answer')%>
    <br>
    <%= f.check_box :correct %> <%= t('interactions.message.its_correct') %>
    <%= link_to_remove_association(t('interactions.link.remove'), f)  %>
  </div>
</div>
